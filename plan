12. Schema

// ==========================================
// PAAYO NEPAL - FINAL SCHEMA (Updated)
// ==========================================

// === AUTH ===
users [icon: user, color: blue] {
  id string pk
  email string unique
  email_verified boolean
  name string
  image string
  role string "admin | editor"
  is_active boolean
  banned_at timestamp
  created_at timestamp
  updated_at timestamp
}

// === REGIONS ===
regions [icon: map, color: orange] {
  id uuid pk
  author_id string fk
  name string
  slug string unique
  description text
  cover_image string
  map_data jsonb
  attraction_rank integer
  is_featured boolean
  status string "draft | published"
  created_at timestamp
  updated_at timestamp
  deleted_at timestamp
}

// === POSTS ===
posts [icon: file-text, color: green] {
  id uuid pk
  type string "article | event | activity | explore"
  author_id string fk
  region_id uuid fk
  title string
  slug string unique
  short_description text
  content jsonb
  cover_image string
  status string "draft | published"
  published_at timestamp
  event_date timestamp
  event_end_date timestamp
  display_order integer
  is_featured boolean
  like_count integer "default 0"
  created_at timestamp
  updated_at timestamp
  deleted_at timestamp
}

// === PHOTOS ===
photo_features [icon: image, color: purple] {
  id uuid pk
  author_id string fk
  region_id uuid fk
  title string
  slug string unique
  description text
  display_order integer
  is_featured boolean
  like_count integer "default 0"
  created_at timestamp
  updated_at timestamp
  deleted_at timestamp
}

photo_images [icon: image, color: purple] {
  id uuid pk
  photo_feature_id uuid fk
  image_url string
  caption string
  display_order integer
  created_at timestamp
}

// === VIDEOS ===
videos [icon: video, color: red] {
  id uuid pk
  author_id string fk
  region_id uuid fk
  title string
  slug string unique
  description text
  platform string "youtube | vimeo | tiktok"
  video_url string
  video_id string
  thumbnail_url string
  duration integer
  display_order integer
  is_featured boolean
  like_count integer "default 0"
  created_at timestamp
  updated_at timestamp
  deleted_at timestamp
}

// === HOTELS ===
hotels [icon: building, color: yellow] {
  id uuid pk
  author_id string fk
  region_id uuid fk
  name string
  slug string unique
  description text
  email string
  phone string
  website string
  star_rating integer "1-5"
  price_range string "budget | mid | luxury"
  amenities jsonb
  cover_image string
  gallery jsonb
  display_order integer
  is_featured boolean
  created_at timestamp
  updated_at timestamp
  deleted_at timestamp
}

hotel_branches [icon: git-branch, color: yellow] {
  id uuid pk
  hotel_id uuid fk
  name string
  address text
  phone string
  email string
  coordinates jsonb
  is_main boolean
  created_at timestamp
  updated_at timestamp
}

// === COMMENTS ===
comments [icon: message-square, color: gray] {
  id uuid pk
  parent_id uuid fk
  target_type string "post | video | photo"
  target_id uuid
  guest_name string
  guest_email string
  content text
  created_at timestamp
  updated_at timestamp
}

// === CONTENT LINKING ===
content_links [icon: link, color: teal] {
  id uuid pk
  source_type string "post | region"
  source_id uuid
  target_type string "photo | video | post"
  target_id uuid
  display_order integer
  created_at timestamp
}

// === TAGS ===
tags [icon: tag, color: indigo] {
  id uuid pk
  name string unique
  slug string unique
  tag_type string "activity | category | general"
  created_at timestamp
}

content_tags [icon: tags, color: indigo] {
  id uuid pk
  tag_id uuid fk
  target_type string "post | video | photo | hotel"
  target_id uuid
}

// === NOTIFICATIONS ===
notifications [icon: bell, color: amber] {
  id uuid pk
  recipient_id string fk
  actor_id string fk
  type string "new_user | verified | content | comment"
  title string
  message text
  target_type string
  target_id uuid
  action_url string
  is_read boolean
  created_at timestamp
}

// === HERO SLIDER ===
hero_slides [icon: layout, color: rose] {
  id uuid pk
  content_type string "post | video | photo | custom"
  content_id uuid
  custom_title string
  custom_description text
  custom_image string
  custom_link string
  sort_order integer
  is_active boolean
  starts_at timestamp
  ends_at timestamp
  created_at timestamp
  updated_at timestamp
}

// ==========================================
// RELATIONSHIPS
// ==========================================

users.id < regions.author_id
users.id < posts.author_id
users.id < photo_features.author_id
users.id < videos.author_id
users.id < hotels.author_id

regions.id < posts.region_id
regions.id < photo_features.region_id
regions.id < videos.region_id
regions.id < hotels.region_id

photo_features.id < photo_images.photo_feature_id
hotels.id < hotel_branches.hotel_id
comments.id < comments.parent_id

tags.id < content_tags.tag_id

users.id < notifications.recipient_id
users.id < notifications.actor_id




