# ==========================================================================
# Nginx reverse-proxy configuration for local/dev
#
# Dev mode keeps plain HTTP and does not require TLS certificates.
# ==========================================================================

upstream rust_backend {
    server backend:8080;
    keepalive 32;
}

upstream nextjs_frontend {
    server frontend-dev:3000;
    keepalive 16;
}

map $http_upgrade $connection_upgrade {
    default upgrade;
    ''      close;
}

limit_req_zone $binary_remote_addr zone=api_zone:10m rate=120r/m;
limit_req_zone $binary_remote_addr zone=auth_zone:10m rate=20r/m;
limit_req_zone $binary_remote_addr zone=upload_zone:10m rate=10r/m;

proxy_cache_path /var/cache/nginx/api
    levels=1:2
    keys_zone=api_cache:10m
    max_size=100m
    inactive=5m
    use_temp_path=off;

server {
    listen 80;
    server_name ${APP_DOMAIN} www.${APP_DOMAIN} _;

    client_max_body_size 50M;

    add_header X-Frame-Options        "DENY"                          always;
    add_header X-Content-Type-Options "nosniff"                       always;
    add_header Referrer-Policy        "strict-origin-when-cross-origin" always;
    add_header X-XSS-Protection       "1; mode=block"                 always;
    add_header Permissions-Policy     "camera=(), microphone=(), geolocation=(self)" always;

    add_header Content-Security-Policy
        "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; worker-src 'self' blob:; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob: https://images.unsplash.com https://*.tile.openstreetmap.org ${S3_PUBLIC_BASE_URL} ${S3_ENDPOINT} https://*.your-objectstorage.com; font-src 'self'; connect-src 'self' https://*.tile.openstreetmap.org; frame-src https://www.youtube.com https://www.youtube-nocookie.com https://player.vimeo.com https://open.spotify.com; media-src 'self'; object-src 'none'; base-uri 'self'; form-action 'self';"
        always;

    location /api/auth/ {
        limit_req zone=auth_zone burst=10 nodelay;

        proxy_pass         http://nextjs_frontend;
        proxy_http_version 1.1;
        proxy_set_header   Host              $host;
        proxy_set_header   X-Real-IP         $remote_addr;
        proxy_set_header   X-Forwarded-For   $proxy_add_x_forwarded_for;
        proxy_set_header   X-Forwarded-Proto $scheme;
        proxy_set_header   Connection        "";

        proxy_buffering on;
    }

    location ~ ^/api/notifications(?:/|$) {
        proxy_pass         http://nextjs_frontend;
        proxy_http_version 1.1;
        proxy_set_header   Host              $host;
        proxy_set_header   X-Real-IP         $remote_addr;
        proxy_set_header   X-Forwarded-For   $proxy_add_x_forwarded_for;
        proxy_set_header   X-Forwarded-Proto $scheme;
        proxy_set_header   Upgrade           $http_upgrade;
        proxy_set_header   Connection        "";

        proxy_buffering    off;
        proxy_cache        off;
        chunked_transfer_encoding off;
        proxy_read_timeout  3600s;
        proxy_send_timeout  3600s;
        proxy_set_header Accept-Encoding "";
    }

    location /api/media {
        limit_req zone=upload_zone burst=5 nodelay;

        proxy_pass         http://rust_backend;
        proxy_http_version 1.1;
        proxy_set_header   Host              $host;
        proxy_set_header   X-Real-IP         $remote_addr;
        proxy_set_header   X-Forwarded-For   $proxy_add_x_forwarded_for;
        proxy_set_header   X-Forwarded-Proto $scheme;
        proxy_set_header   Connection        "";
        proxy_read_timeout  120s;
        proxy_send_timeout  120s;
        proxy_request_buffering off;
    }

    location /api/ {
        limit_req zone=api_zone burst=30 nodelay;

        proxy_pass         http://rust_backend;
        proxy_http_version 1.1;
        proxy_set_header   Host              $host;
        proxy_set_header   X-Real-IP         $remote_addr;
        proxy_set_header   X-Forwarded-For   $proxy_add_x_forwarded_for;
        proxy_set_header   X-Forwarded-Proto $scheme;
        proxy_set_header   Connection        "";

        proxy_cache        api_cache;
        proxy_cache_methods GET HEAD;
        proxy_cache_valid  200 30s;
        proxy_cache_bypass $http_authorization $cookie_paayo_session;
        proxy_no_cache     $http_authorization $cookie_paayo_session;
        add_header         X-Cache-Status $upstream_cache_status;
        proxy_read_timeout  30s;
        proxy_send_timeout  30s;
    }

    location /uploads/ {
        proxy_pass         http://rust_backend;
        proxy_http_version 1.1;
        proxy_set_header   Host              $host;
        proxy_set_header   Connection        "";
        expires 30d;
        add_header Cache-Control "public, immutable" always;
    }

    location /_next/webpack-hmr {
        proxy_pass         http://nextjs_frontend;
        proxy_http_version 1.1;
        proxy_set_header   Host              $host;
        proxy_set_header   Upgrade           $http_upgrade;
        proxy_set_header   Connection        $connection_upgrade;
        proxy_set_header   X-Real-IP         $remote_addr;
        proxy_set_header   X-Forwarded-For   $proxy_add_x_forwarded_for;
        proxy_set_header   X-Forwarded-Proto $scheme;

        proxy_read_timeout  3600s;
        proxy_send_timeout  3600s;
        proxy_buffering     off;
        proxy_cache         off;
    }

    location /_next/ {
        proxy_pass         http://nextjs_frontend;
        proxy_http_version 1.1;
        proxy_set_header   Host              $host;
        proxy_set_header   Connection        "";
        expires 365d;
        add_header Cache-Control "public, immutable" always;
    }

    location / {
        proxy_pass         http://nextjs_frontend;
        proxy_http_version 1.1;
        proxy_set_header   Host              $host;
        proxy_set_header   X-Real-IP         $remote_addr;
        proxy_set_header   X-Forwarded-For   $proxy_add_x_forwarded_for;
        proxy_set_header   X-Forwarded-Proto $scheme;
        proxy_set_header   Connection        "";

        proxy_read_timeout  300s;
        proxy_send_timeout  300s;
    }

    location /nginx-health {
        access_log off;
        return 200 "ok\n";
        add_header Content-Type text/plain;
    }

    error_page 502 503 504 /50x.html;
    location = /50x.html {
        root /usr/share/nginx/html;
        internal;
    }
}

